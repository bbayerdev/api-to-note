generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Note {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  tittle String
  body   Json?  // alterado de String? para Json? por causa do blocknote
  date   String
  hour   String
  idUser String  @db.ObjectId
}

model Usuario {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  nome     String
  email    String   @unique
  senha    String?
  imageUrl String?
  authType String   @default("password")
  criadoEm DateTime @default(now())
}
